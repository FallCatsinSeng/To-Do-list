# Production Environment Template
# Copy this to .env on production server and configure values

# Database Configuration
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MYSQL_DATABASE=bulan2_prod_db
MYSQL_USER=bulan2_prod_user
MYSQL_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT Secret (Generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_VERY_LONG_RANDOM_STRING

# Application Environment
APP_ENV=production

# Production URLs (CHANGE to your domain)
NEXT_PUBLIC_API_URL=https://bulan2.yusufsoftware.my.id
GOOGLE_REDIRECT_URL=https://bulan2.yusufsoftware.my.id/api/auth/google/callback
FRONTEND_URL=https://bulan2.yusufsoftware.my.id
ALLOWED_ORIGINS=https://bulan2.yusufsoftware.my.id

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
